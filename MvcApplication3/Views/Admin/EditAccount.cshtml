@{
    ViewBag.Title = "EditAccount";
}

@using MvcApplication3.Models
@model Account

@using(Html.BeginForm("EditAccount", "Admin")){
    var a = typeof(Account).GetProperties();
    for (int i = 1; i < 4;i++ )
    {
        @Html.Label(a[i].Name);
        @Html.Editor(a[i].Name);
        @Html.ValidationMessage(a[i].Name);
    }
    @Html.LabelFor(x=>x.RoleName)
    @Html.DropDownListFor(x => x.RoleName, new SelectList(Enum.GetNames(typeof(Role))))
    @Html.ValidationMessageFor(x=>x.RoleName)
    <br/>
    <input type="submit" value="Submit"/>
}
